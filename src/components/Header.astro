<style>
    header {
        margin: 0;
        padding: 0.5rem 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
        margin: 12px 24px 0 8px;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    nav a {
        color: var(--black);
        border-bottom: 4px solid transparent;
        text-decoration: none;
        margin: 12px 24px 0 0;
    }
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }

    .social-links,
    .social-links a {
        display: flex;
    }
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
    .logo {
        display: block;
        width: 40px;
        margin: 16px 0 0 0;
    }
</style>
