---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Calendar from "../components/Calendar.astro";
import Contact from "../components/Contact.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import plazaMemoriaImage from "../src/assets/images/plaza-de-la-memoria.jpg";
import panoramicaAlmonasterImage from "../assets/images/panoramica-almonaster.jpg";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <section class="hero-section">
                <h1 class="title">
                    Espacio de trabajo y asesoramiento para personas
                    emprendedoras
                </h1>
            </section>
            <section class="events-section">
                <h2>Próximos Eventos</h2>
                <Calendar />
            </section>
            <section>
                <h2>
                    Haz despegar tus ideas y pon en marcha tu propio proyecto
                    empresarial
                </h2>
            </section>
            <section class="contact-section">
                <Contact />
            </section>

<Image
    src={panoramicaAlmonasterImage}
    alt="Panorámica de Almonaster la Real"
    width={1000}
    height={600}
/>


            <section>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3149.5359297690165!2d-6.789423087176542!3d37.871147606483575!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd110c8162817f5d%3A0x6bbeb4200df976ca!2sC.%20Llana%2C%2018%2C%2021350%20Almonaster%20la%20Real%2C%20Huelva!5e0!3m2!1ses!2ses!4v1715442247903!5m2!1ses!2ses"
                    width="100%"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </section>
        </main>
        <Footer />
        <style>
            body {
                background-image: url("../assets/images/plaza-de-la-memoria.jpg");
                background-image: url(plazaMemoriaImage);
                background-size: contain;
                background-repeat: no-repeat;
                background-position: top;
            }
            main {
            }
            .hero-section {
                /* position: absolute;
                top: 55px;
                left: 0;
                width: 100vw; */

                h1.title {
                    font-family: "Inter", sans-serif;
                    font-size: 6ch;
                    max-width: 800px;
                    margin: 0 auto 3rem;
                    color: #000000;
                    text-transform: uppercase;
                    font-weight: 900;
                    letter-spacing: 2px;
                    /* text-shadow: 0 0 6px rgba(0, 0, 0, 0.8); */
                    margin-bottom: 100px;
                    text-wrap: wrap;
                    white-space: normal;
                    
                }
                @media (max-width: 600px) {
                    h1.title {
                        margin-top: 3rem;
                        font-size: 4ch;
                    }
                }
            }
            .events-section {
                background-color: #ffe554;
                border: 2ch solid #ffe554;
                margin-bottom: 2.5rem;
            }
            .contact-section {
                margin: 2.5rem 0;
            }
        </style>
    </body>
</html>
