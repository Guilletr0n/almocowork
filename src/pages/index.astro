---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Calendar from "../components/Calendar.astro";
import Contact from "../components/Contact.astro";
import Events from "../components/Events.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import plazaMemoriaImage from "../src/assets/images/plaza-de-la-memoria.jpg";
import panoramicaAlmonasterImage from "../assets/images/panoramica-almonaster.jpg";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <section class="hero-section">
                <h1 class="title">
                    Espacio de trabajo
                </h1>
                <h2 class="subtext">Con asesoramiento para personas
                    emprendedoras</h2>
            </section>
            <Events/>
            <section>
                <h2>
                    Haz despegar tus ideas y pon en marcha tu propio proyecto
                    empresarial
                </h2>
            </section>
            <section class="contact-section">
                <Contact />
            </section>

<Image
    src={panoramicaAlmonasterImage}
    alt="PanorÃ¡mica de Almonaster la Real"
    class="visual__picture"
    width={1000}
    height={600}
/>
            <section>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3149.5359297690165!2d-6.789423087176542!3d37.871147606483575!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd110c8162817f5d%3A0x6bbeb4200df976ca!2sC.%20Llana%2C%2018%2C%2021350%20Almonaster%20la%20Real%2C%20Huelva!5e0!3m2!1ses!2ses!4v1715442247903!5m2!1ses!2ses"
                    width="100%"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </section>
        </main>
        <Footer />
        <style>
            body {
                //background-image: url("../assets/images/plaza-de-la-memoria.jpg");
                //background-image: url(plazaMemoriaImage);
                //background-size: contain;
                //background-repeat: no-repeat;
                background-position: top;
            }
            main {
            }
            .hero-section {
                width: 1280px;
                
                h1.title {
                    color: rgb(var(--gray-medium));
                    font-family: "Inter", sans-serif;
                    font-size: 6ch;
                    max-width: 1280px;
                    margin: 0 auto;
                    text-transform: uppercase;
                    font-weight: 900;
                    letter-spacing: 2px;
                    /* text-shadow: 0 0 6px rgba(0, 0, 0, 0.8); */
                    text-wrap: wrap;
                    white-space: normal;
                    margin-bottom: -24px;
                }

                h2.subtext {
                    font-weight: 500;
                    font-size: 16px;
                    //transform: rotate(-45deg);
                    display: inline-block;
                    margin: 0 0 2rem 0;
                }
                
                @media (max-width: 600px) {
                    h1.title {
                        margin-top: 3rem;
                        font-size: 4ch;
                    }
                }
            }
            
            .contact-section {
                margin: 2.5rem 0;
            }

            .visual__picture {
                filter: grayscale() contrast(1.75);
                transition: filter 0.2s ease-in-out;
                &:hover {
                    filter:brightness(1) grayscale(0) contrast(1);
                }
            }
        </style>
    </body>
</html>
